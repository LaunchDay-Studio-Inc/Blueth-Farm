# GDScript linting configuration for Blueth Farm
# Using gdtoolkit (gdlint) for Godot 4.x

# Maximum line length
max-line-length: 120

# Function name conventions
function-name: ^[a-z_][a-z0-9_]*$

# Class name conventions  
class-name: ^[A-Z][a-zA-Z0-9]*$

# Constant name conventions
const-name: ^[A-Z_][A-Z0-9_]*$

# Disable specific checks (can be enabled later for stricter enforcement)
disable:
  # Allow TODO comments
  - function-arguments-number
  # Allow flexible signal naming
  - signal-name
  # Don't enforce private variable prefix
  - private-method-call
  # Allow flexible enum naming
  - enum-name

# Enforce type hints on function parameters and returns
function-declaration-order: true
function-variable-name: ^[a-z_][a-z0-9_]*$
class-variable-name: ^[a-z_][a-z0-9_]*$

# Code formatting preferences
max-file-lines: 1000
max-function-lines: 100
